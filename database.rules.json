{
  "rules": {
    "private": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid",

        "uid": {
          ".validate": "newData.val() === auth.uid"
        }
      }
    },

    "user": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    }
  }
}
